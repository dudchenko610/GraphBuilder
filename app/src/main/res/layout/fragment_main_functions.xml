<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btn_sin"
            android:text="sin"
            android:layout_weight="1"
            android:background = "@drawable/ripple_effect_main_with_border"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btn_cos"
            android:text="cos"
            android:layout_weight="1"
            android:background = "@drawable/ripple_effect_main_with_border"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btn_tan"
            android:text="tg"
            android:layout_weight="1"
            android:background = "@drawable/ripple_effect_main_with_border"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btn_asin"
            android:text="asin"
            android:layout_weight="1"
            android:background = "@drawable/ripple_effect_main_with_border"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btn_acos"
            android:text="acos"
            android:layout_weight="1"
            android:background = "@drawable/ripple_effect_main_with_border"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btn_atan"
            android:text="atan"
            android:layout_weight="1"
            android:background = "@drawable/ripple_effect_main_with_border"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btn_log"
            android:text="log"
            android:layout_weight="1"
            android:background = "@drawable/ripple_effect_main_with_border"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btn_log2"
            android:text="log2"
            android:layout_weight="1"
            android:background = "@drawable/ripple_effect_main_with_border"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btn_log10"
            android:text="log10"
            android:layout_weight="1"
            android:background = "@drawable/ripple_effect_main_with_border"
           />


    </LinearLayout>




</LinearLayout>