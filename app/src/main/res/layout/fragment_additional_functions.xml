<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:grid="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/ControlPanelTheme">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btn_sec"
            android:text="sec"
            android:layout_weight="1"
            android:background="@drawable/ripple_effect_main_with_border"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btn_cot"
            android:text="cot"
            android:layout_weight="1"
            android:background="@drawable/ripple_effect_main"
            android:foreground="@drawable/button_border"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btn_acot"
            android:text="acot"
            android:layout_weight="1"
            android:background="@drawable/ripple_effect_main_with_border"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btn_sqrt"
            android:text="sqrt"
            android:layout_weight="1"
            android:background = "@drawable/ripple_effect_main_with_border"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btn_sh"
            android:text="sh"
            android:layout_weight="1"
            android:background = "@drawable/ripple_effect_main_with_border"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btn_ch"
            android:text="ch"
            android:layout_weight="1"
            android:background = "@drawable/ripple_effect_main_with_border"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btn_cosec"
            android:text="cosec"
            android:layout_weight="1"
            android:background="@drawable/ripple_effect_main_with_border"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btn_e1"
            android:text=""
            android:layout_weight="1"
            android:background="@drawable/ripple_effect_main_with_border"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btn_e2"
            android:text=""
            android:layout_weight="1"
            android:background="@drawable/ripple_effect_main_with_border"/>

    </LinearLayout>




</LinearLayout>